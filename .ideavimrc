" ******************** Editing *****************************
let mapleader=" "
set easymotion
set scrolloff=5
set history=1000
set ideajoin
set idearefactormode=keep
map <leader>ff <Action>(Find)
map <leader>fr <Action>(Replace)
map <leader>re <Action>(RenameElement)
noremap <leader>d :action EditorDuplicate<CR>
nmap , :action EditorSelectWord<CR>
xmap , :action EditorSelectWord<CR>
xnoremap < <gv
vnoremap > >gv
xnoremap K :m '<-2<CR>gv=gv
xnoremap J :m '>+1<CR>gv=gv


" ******************** Search ********************************
set ic
set hlsearch
set incsearch
set smartcase
xnoremap * y/\V<C-R>"<CR>
noremap <Esc> :nohlsearch<CR>


" ******************** Clipboard ********************************
nnoremap <leader>xc :%y<CR>
nnoremap <leader>xC :%y+<CR>
nnoremap <leader>xd :%d<CR>
nnoremap <leader>xD :%d+<CR>
nnoremap <leader>pp "+p
nnoremap <leader>yy "+yy
xnoremap <leader>y  "+y
xnoremap <leader>xP "_d+p


" ******************** Tabs ********************************
nmap <leader>qq <Action>(CloseContent)
nmap <leader>qa <Action>(CloseAllEditors)
nmap <leader>qo <Action>(CloseAllEditorsButActive)
nmap <leader>= <Action>(MoveTabRight)
nmap <leader>- <Action>(MoveTabDown)


" ******************** Debugging  **************************
nmap <leader>rd <Action>(Debug)
nmap <leader>rr <Action>(Run)
nmap <leader>b <Action>(ToggleLineBreakpoint)


" ******************** File management *********************
set NERDTree
nmap <leader>nf <Action>(NewFile)
nmap <leader>nd <Action>(NewDir)
nmap <leader>rf <Action>(RenameFile)
nmap <leader>cf <Action>(CopyFileName)
nmap <leader>cp <Action>(CopyContentRootPath)
nmap <leader>s <Action>(SelectInProjectView)
nmap <leader>j <Action>(ActivateProjectToolWindow)


" ******************** Navigation **************************
nmap <leader>gl <Action>(GotoLine)
nmap <leader>gl <Action>(GotoClass)
nmap <leader>gf <Action>(GotoFile)
nmap <leader>gs <Action>(GotoSymbol)
nmap <leader>ga <Action>(GotoAction)
nmap <leader>a <Plug>(easymotion-s)
nmap [[ <Action>(MethodUp)
nmap ]] <Action>(MethodDown)
nmap <C-p> <Action>(PreviousTab)
nmap <C-n> <Action>(NextTab)
" nnoremap <leader>1 1gt

" ******************** IDE *********************************
" Ctrl + Alt  \ = Toggle IdeaVim
" Alt + F11 = Open in terminal (Current file)
" Ctrl + j = Up, Ctrl + k = Down
" Caps Lock = Esc
nmap <leader>ri <Action>(RestartIde)
noremap <leader>cc :edit ~/.ideavimrc<CR>
noremap <leader>cs :source ~/.ideavimrc<CR>
nnoremap <leader>tw :!start cmd /K "cd /d %:p:h"<CR>


" ******************** Git  *********************************
nmap <leader>Gb <Action>(Git.Branches)
nmap <leader>Gp <Action>(Vcs.Push)
" nmap <leader>Gm <Action>(VcsGroups)
nmap <leader>Gg <Action>(CheckinProject)
nmap <leader>Gu <Action>(Vcs.UpdateProject)


" ******************** Plugins *****************************
Plug 'machakann/vim-highlightedyank'
" Plug 'tpope/vim-commentary'
